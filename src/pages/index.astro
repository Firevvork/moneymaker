---
import Layout from "../layouts/Layout.astro";
import Card from "../components/HomeCard.astro";
---

<Layout title="Money Maker">
  <main class="w-full flex flex-col items-center justify-center">
    <div class="mt-36 flex flex-col items-center justify-center gap-14">
      <div class="flex flex-col gap-3 items-center mr-[85px]">
        <h1 class="text-3xl font-mono">
          Business Models and Industries Insights
        </h1>
        <h1 class="text-3xl font-mono">For all you need</h1>
      </div>
      <div class="grid grid-cols-5 gap-8">
        <Card emoji="💽" name="SaaS" anchor="saas" />
        <Card emoji="🏦" name="Bank" anchor="bank" />
        <Card emoji="🚗" name="Car Rental" anchor="car-rental" />
        <Card emoji="🎮" name="Video Games" anchor="video-games" />
        <Card emoji="📦" name="Warehousing" anchor="warehousing" />
        <Card emoji="⛽️" name="Oil & Gas" anchor="oil-and-gas" />
        <Card emoji="💼" name="Consulting" anchor="consulting" />
        <Card emoji="🍔" name="Fast Food" anchor="fast-food" />
        <Card emoji="⚙️" name="Machine Tool" anchor="machine-tool" />
        <Card emoji="🏢" name="Real Estate" anchor="real-estate" />
        <Card emoji="📺" name="Media" anchor="media" />
        <Card emoji="💰" name="Insurance" anchor="insurance" />
        <Card emoji="👔" name="Textile" anchor="textile" />
        <Card emoji="🚢" name="Shipbuilding" anchor="shipbuilding" />
      </div>
    </div>
  </main>
</Layout>
